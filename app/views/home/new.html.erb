<%= form_with model: @game, url: home_index_path, method: :post do |form| %>
  <%= form.number_field :user_answer, style: "color: black;" %>
  <%= form.hidden_field :favorite_team, value: @game.favorite_team %>
  <%= form.hidden_field :favorite_spread, value: @game.favorite_spread %>
  <%= form.hidden_field :favorite_points, value: @game.favorite_points %>
  <%= form.hidden_field :underdog_team, value: @game.underdog_team %>
  <%= form.hidden_field :underdog_spread, value: @game.underdog_spread %>
  <%= form.hidden_field :underdog_points, value: @game.underdog_points %>
  <%= form.hidden_field :time, value: @game.time %>
  <%= form.hidden_field :correct_answer, value: @game.correct_answer %>
  <%= form.submit "Submit" %>
<% end %>

